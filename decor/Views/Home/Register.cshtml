@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Home One || Crystalo || Responsive HTML 5 Template</title>

    <!-- responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- For IE -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- master stylesheet -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Responsive stylesheet -->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="~/images/favicon/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="~/images/favicon/favicon-16x16.png" sizes="16x16">

    <!-- Fixing Internet Explorer-->
    <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <script src="~/js/html5shiv.js"></script>
    <![endif]-->

</head>
<body>
    <section class="login-register-area">
        <div class="container">
            <div class="row">
                <!-- Login Section -->
                <!-- Register Section -->
                <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="form register">
                        <div class="shop-page-title">
                            <div class="title">User Register <span>Here</span></div>
                        </div>
                        <div class="row">
                            <form asp-action="Register" method="post" enctype="multipart/form-data">
                                <div class="col-md-12">
                                    <div class="input-field">
                                        <input type="text" name="user_name" placeholder="Your Name *">
                                        <div class="icon-holder">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="input-field">
                                        <input type="email" name="user_email" placeholder="Enter Mail ID *">
                                        <br />
                                        <br />
                                        <br />
                                        <div class="icon-holder">
                                            <i class="fa fa-envelope" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="input-field">
                                        <input type="password" name="user_password" placeholder="Enter Password">
                                        <br />
                                        <br />
                                        <div class="icon-holder">
                                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                <div class="input-field">
                                <input type="text" name="user_contact" placeholder="Your Contact">
                                <div class="icon-holder">
                                <i class="fa fa-phone" aria-hidden="true"></i>
                                </div>
                                </div>
                                </div>
                                <div class="col-md-12">
                                <div class="input-field">
                                <input type="file" name="user_image">
                                <div class="icon-holder">
                                <i class="fa fa-image" aria-hidden="true"></i>
                                </div>
                                </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-lg-5 col-md-5 col-sm-12">
                                            <button class="btn-one" type="submit">Register Here</button>
                                        </div>
                                        <div class="col-lg-7 col-md-7 col-sm-12">
                                            <div class="right">
                                                <h6>
                                                    <span>*</span>
                                                    <p>For Designer <a href="@Url.Action("DesignerRegister","Home")"> Registration</a></p>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>


                <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12">
                    <div class="form">
                        <div class="shop-page-title">
                            <div class="title">User Login <span>Now</span></div>
                        </div>
                        <div class="row">
                            <form method="post" asp-action="Userlogin">
                                <div class="col-xl-12">
                                    <div class="input-field">
                                        <input type="text" name="username" placeholder="Your Name">
                                        <div class="icon-holder">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <div class="input-field">
                                        <input type="password" name="password" placeholder="Enter your password">
                                        <br />
                                        <br />
                                        <div class="icon-holder">
                                            <i class="fa fa-lock" aria-hidden="true"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xl-12">
                                    <div class="row">
                                        <div class="col-xl-6 col-lg-6 col-sm-12">
                                            <button class="btn-one" type="submit">Login Now</button>
                                            <div class="remember-text">
                                                <div class="checkbox">
                                                    <label>
                                                        <input name="remember" type="checkbox">
                                                        <span>Remember Me</span>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-sm-12">
                                            <ul class="social-icon">
                                                <li class="login-with">Or login with</li>
                                                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                                <li><a href="#"><i class="fa fa-twitter twitter" aria-hidden="true"></i></a></li>
                                                <li><a href="#"><i class="fa fa-google-plus gplus" aria-hidden="true"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <div>
                                    @ViewBag.message
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</body>
</html>
