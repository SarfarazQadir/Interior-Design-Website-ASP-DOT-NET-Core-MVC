@using DecorVista.Models
@{
    ViewData["Title"] = "FetchBlog";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model List<Blogs>

<section class="section">
    <div class="section-body">
        <div class="align-right">
            <a href="@Url.Action("AddBlog","Admin")" class="btn btn-primary align-right">Add New blog</a>
        </div>
        <div class="row mt-sm-4">
            <div class="col-12 ">
                <div class="card">
                    <div class="card-header">
                        <h4>Blog Details</h4>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tr>
                                    <th>Blog Id</th>
                                    <th>Blog Articale Name</th>
                                    <th>Blog Image</th>
                                    <th>Blog Description</th>
                                    <th colspan="2">Action</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.blog_id</td>
                                        <td>@item.blog_article_name</td>
                                        <td><img src="@("~/BlogImages/"+item.blog_article_image)" asp-append-version="true" width="70px" height="70px" /></td>
                                        <td>@item.blog_article_discription</td>
                                        <td>
                                            <div class="dropdown">
                                                <a href="#" data-toggle="dropdown" class="btn btn-warning dropdown-toggle">Options</a>
                                                <div class="dropdown-menu">
                                                    <a href="@Url.Action("DetailBlog","admin",new{id=item.blog_id})" class="dropdown-item has-icon"><i class="fas fa-eye"></i> View Details</a>
                                                    <a href="@Url.Action("UpdateBlog","admin",new{id=item.blog_id})" class="dropdown-item has-icon"><i class="far fa-edit"></i> Edit</a>
                                                    <a href="@Url.Action("DeleteBlog","admin",new{id=item.blog_id})" class="dropdown-item has-icon text-danger">
                                                        <i class="far fa-trash-alt"></i>
                                                        Delete
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


