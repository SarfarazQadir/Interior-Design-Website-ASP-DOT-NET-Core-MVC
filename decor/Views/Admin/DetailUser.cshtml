@{
    ViewData["Title"] = "DetailUser";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model User
<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                    <div class="card-body">
                        <div class="author-box-center">
                            <img src="@("~/UserImages/"+Model.user_image)" asp-append-version="true" class="rounded-circle author-box-picture" />
                            <div class="clearfix"></div><br />
                            <div class="author-box-name">
                                <a href="">@Model.user_name</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <div class="card">
                    <div class="card-header center">
                        <h4 class="text-center">Customer Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="py-4">
                            <p class="clearfix">
                                <span class="float-left">
                                    User Id :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.user_id
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Customer Name :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.user_name
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    User Contact :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.user_contact
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    User Email :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.user_email
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    User Password :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.user_password
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

