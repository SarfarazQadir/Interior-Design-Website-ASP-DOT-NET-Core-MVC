@using DecorVista.Models
@{
    ViewData["Title"] = "DetailBlog";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model Blogs
<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                    <div class="card-body">
                        <div class="author-box-center">
                            <img src="@("~/BlogImages/"+Model.blog_article_image)" asp-append-version="true" class="rounded-circle author-box-picture" />
                            <div class="clearfix"></div><br />
                            <div class="author-box-name">
                                <a href="">@Model.blog_article_name</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <div class="card">
                    <div class="card-header center">
                        <h4 class="text-center">blog Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="py-4">
                            <p class="clearfix">
                                <span class="float-left">
                                    Blog Id :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.blog_id
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Blog Article Name :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.blog_article_name
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Blog Article Discription :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.blog_article_discription
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>


