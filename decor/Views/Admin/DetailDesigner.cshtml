@using DecorVista.Models
@{
    ViewData["Title"] = "DetailDesigner";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

@model Designer
<section class="section">
    <div class="section-body">
        <div class="row mt-sm-4">
            <div class="col-12 col-md-12 col-lg-4">
                <div class="card author-box">
                    <div class="card-body">
                        <div class="author-box-center">
                            <img src="@("~/Adminassests/DesignerImages/"+Model.designer_image)" asp-append-version="true" class="rounded-circle author-box-picture" />
                            <div class="clearfix"></div><br />
                            <div class="author-box-name">
                                <a href="">@Model.designer_first_name</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-12 col-lg-6">
                <div class="card">
                    <div class="card-header center">
                        <h4 class="text-center">Designer Details</h4>
                    </div>
                    <div class="card-body">
                        <div class="py-4">
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer Id :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_id
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer FirstName :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_first_name
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer LastName :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_last_name
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer Contact :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_contact
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer Email :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_email
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer Password :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_password
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer Address :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_address
                                </span>
                            </p><p class="clearfix">
                                <span class="float-left">
                                    Designer Experience :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_experience
                                </span>
                            </p><p class="clearfix">
                                <span class="float-left">
                                    Designer Specialization :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_specialization
                                </span>
                            </p>
                            <p class="clearfix">
                                <span class="float-left">
                                    Designer Portfolio :
                                </span>
                                <span class="float-right text-muted">
                                    @Model.designer_portfolio
                                </span>
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>

